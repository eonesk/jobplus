	<insert id="portfolioWrite" parameterType="portfolioDTO">
		INSERT INTO RS_PORTFOLIO VALUES
		(RS_portfolio_SEQ.nextval,#{rs_pfType},#{rs_pfFileorurl},#{rs_pfUrl},#{rs_pfFile},#{m_Id},#{rs_pfUsertitle})
